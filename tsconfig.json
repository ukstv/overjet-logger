{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "resolveJsonModule": false,
    "moduleResolution": "Node",
    "isolatedModules": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
